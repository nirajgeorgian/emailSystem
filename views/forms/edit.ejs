<% layout('layout') %>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form action="" role="form" method="post">
                    <h2>Edit your Tag <small>Make it as simple as possible</small></h2>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="form-group">
                            <input type="text" name="tags" id="editTag" class="form-control input-lg" tabindex="1" value="<%= tags %>">
                        </div>
                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-12 col-md-6"><input type="submit" name="editTag" value="Submit" class="btn btn-primary btn-block btn-lg" tabindex="3"></div>
                            <div class="col-xs-12 col-md-6"><a href="/tags" class="btn btn-default btn-block btn-lg">Cancel</a></div>
                        </div>
                </form>
                </div>
            </div>
        </div>
    </div>
